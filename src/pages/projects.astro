---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

// 1. IMPORT GAMBAR DARI FOLDER ASSETS
// Pastikan nama file (besar/kecil huruf) sama persis dengan di folder
import snapbillImg from "../assets/snapbill.jpeg";
import tscImg from "../assets/tsc.jpeg";
import glovImg from "../assets/glov.png";
import statsImg from "../assets/stats.png";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Kumpulan Project Semester 3</div>
    <div class="text-3xl w-full font-bold mb-5">Design</div>
  </div>

  <HorizontalCard
    title="SnapBill"
    img={snapbillImg.src}
    desc="Desain Figma UI high-fidelity untuk aplikasi SnapBill"
    url="https://www.figma.com/proto/Tg6e7tnRNETZzGC17r5WlR/Fintech?node-id=1-3&p=f&t=QHDCLaxqc2QWbuer-1&scaling=scale-down&content-scaling=fixed&page-id=0%3A1&starting-point-node-id=1%3A3&show-proto-sidebar=1"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="The Springs Club"
    img={tscImg.src}
    desc="Desain Figma UI high-fidelity untuk website registrasi member dan pemesanan fasilitas The Springs Club"
    url="https://www.figma.com/proto/Rj8tyRFFRq4uP1bNKrGUU6/IMK?node-id=734-978&p=f&t=f1gaZhiF3I2Z7ZYv-1&scaling=scale-down&content-scaling=fixed&page-id=0%3A1&starting-point-node-id=734%3A978&show-proto-sidebar=1"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">IoT</div>
  </div>

  <HorizontalCard
    title="Smart Glove Prototype"
    img={glovImg.src}
    desc="Proyek sistem terbenam menggunakan ESP32S3 dan sensor MPU6050 untuk mempersonifikasikan output untuk gerakan tertentu"
    url="https://drive.google.com/file/d/1h-DPiVxeKuHrvyaHHytmq6xGJkI8Yt2S/view?usp=drivesdk"
    badge="Favorit Saya"
  />
  
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Paper</div>
  </div>

  <HorizontalCard
    title="Analisis Hubungan Intensitas Penggunaan Aplikasi Keuangan Digital dan Penggunaan Banking-Only atau Multi-Platform terhadap Pengelolaan Keuangan Pribadi Mahasiswa Universitas Pradita"
    img={statsImg.src}
    desc="Paper Statistika"
    url="https://docs.google.com/document/d/185wcc598uWbIwXbfCzFaPv9ofoi6Y20LtLwUVQWUhjY/edit?usp=sharing"
  />
</BaseLayout>